/* pages/userinfo/userinfo.wxss */
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: rgb(61, 58, 58);
}
.avatar-wrapper {
  background: #70a8d2;
  padding: 25px 0;
}

.avatar-wrapper .avatar {
  margin: 0 auto;
  text-align: center;
}

.avatar-wrapper .avatar image {
  width: 100px;
  height: 100px;
}

.avatar-wrapper .text {
  text-align: center;
  color: #fff;
}
.weui-cell.weui-cell_access{
  display: flex;
  flex-direction: row;
}
.navigator-hover {
  color:blue;
}
.item-row {
  display: flex;
  flex-direction: row;
  align-items: auto;
}

.item-text{ 
  font-family: PingFangSC-Regular;
  margin: 20rpx 10rpx 20rpx 10rpx ; /** 上 右 下 左 **/
  font-size: 48rpx;
  color: #666;
  width: 80%;
}
.item-tips{ 
  text-align: right;
  width: 10%;
  height: 25px;
}
.item-image {
  vertical-align: middle;
  margin: 20rpx 10rpx 0rpx 10rpx ; /** 上 右 下 左 **/
  width: 10%;
  height: 30px;
}
.line{
  height: 0.8px;
  background-color: #ccc ;
}

.bt{ 
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 44 px;
  background-color:rgba(255, 255, 255, 0.381) ;
  color: rgb(23, 22, 22);
  justify-content: center; 
  align-items: center;
}
